{
  "name": "@2ly/common",
  "version": "0.1.9",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./src/index.ts",
        "browser": "./src/index.browser.ts",
        "default": "./src/index.ts"
      },
      "types": "./src/index.ts"
    },
    "./test/test.containers": {
      "import": {
        "types": "./src/test/test.containers.ts",
        "default": "./src/test/test.containers.ts"
      },
      "types": "./src/test/test.containers.ts"
    },
    "./test/vitest": {
      "import": {
        "types": "./src/test/vitest.ts",
        "default": "./src/test/vitest.ts"
      },
      "types": "./src/test/vitest.ts"
    },
    "./test/fixtures": {
      "import": {
        "types": "./src/test/fixtures/index.ts",
        "default": "./src/test/fixtures/index.ts"
      },
      "types": "./src/test/fixtures/index.ts"
    },
    "./test/fixtures/mcp-builders": {
      "import": {
        "types": "./src/test/fixtures/mcp-builders.ts",
        "default": "./src/test/fixtures/mcp-builders.ts"
      },
      "types": "./src/test/fixtures/mcp-builders.ts"
    },
    "./test/fixtures/playwright": {
      "import": {
        "types": "./src/test/playwright/index.ts",
        "default": "./src/test/playwright/index.ts"
      },
      "types": "./src/test/playwright/index.ts"
    },
    "./test/fixtures/mcp-test-helpers": {
      "import": {
        "types": "./src/test/fixtures/mcp-test-helpers.ts",
        "default": "./src/test/fixtures/mcp-test-helpers.ts"
      },
      "types": "./src/test/fixtures/mcp-test-helpers.ts"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint \"{src,test}/**/*.{js,ts}\" --format unix --quiet",
    "lint:full": "eslint \"{src,test}/**/*.{js,ts}\"",
    "format": "prettier --write \"{src,test}/**/*.*\" && rm -rf node_modules/.cache/prettier",
    "typecheck": "tsc --noEmit --skipLibCheck --pretty false",
    "typecheck:full": "tsc --noEmit --skipLibCheck",
    "codegen": "graphql-codegen --config apollo.codegen.ts && graphql-codegen --config dgraph.codegen.ts",
    "codegen:mcp-registry": "openapi-typescript https://registry.modelcontextprotocol.io/openapi.yaml -o src/types/mcp-registry.ts",
    "test": "vitest --run"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2"
  },
  "devDependencies": {
    "@testcontainers/nats": "^11.7.1",
    "testcontainers": "^11.7.1",
    "get-port": "^7.1.0"
  },
  "overrides": {}
}
