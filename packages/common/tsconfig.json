{
  "extends": "../../tsconfig.json",
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/**/*.spec.ts", "./src/**/*.test.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./src",
    "declaration": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
  }
}
