{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "target": "esnext",
    "strict": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "customConditions": [
      "source"
    ],
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "paths": {
      "@2ly/frontend": [
        "packages/frontend/src"
      ],
      "@2ly/backend": [
        "packages/backend/src"
      ],
      "@2ly/runtime": [
        "packages/runtime/src"
      ],
      "@2ly/common": [
        "packages/common/src"
      ],
      "@2ly/common/test/testcontainers": [
        "packages/common/src/test/testcontainers.ts"
      ],
      "@2ly/common/test/vitest": [
        "packages/common/src/test/vitest.ts"
      ]
    }
  },
  "include": [
    "packages/**/*.ts"
  ]
}