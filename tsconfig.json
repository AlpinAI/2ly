{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "target": "esnext",
    "lib": ["ES2024", "DOM"],
    "strict": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "paths": {
      "@skilder-ai/frontend": [
        "packages/frontend/src"
      ],
      "@skilder-ai/backend": [
        "packages/backend/src"
      ],
      "@skilder-ai/runtime": [
        "packages/runtime/src"
      ],
      "@skilder-ai/common": [
        "packages/common/src"
      ],
      "@skilder-ai/common/test/testcontainers": [
        "packages/common/src/test/testcontainers.ts"
      ],
      "@skilder-ai/common/test/vitest": [
        "packages/common/src/test/vitest.ts"
      ],
      "@skilder-ai/common/test/fixtures": [
        "packages/common/src/test/fixtures/index.ts"
      ],
      "@skilder-ai/common/test/test.containers": [
        "packages/common/src/test/test.containers.ts"
      ]
    }
  },
  "include": [
    "packages/**/*.ts"
  ]
}